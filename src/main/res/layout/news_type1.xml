<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tx_news_simple_photos_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="#696969"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>


        <com.iflytek.domain.MyView.MyImageView
            android:id="@+id/tx_news_simple_photos_photo"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:scaleType="fitXY" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tx_news_simple_photos_time"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/img_news_simple_photos_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/tx_news_simple_photos_time"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/laba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:src="@drawable/yinlinag" />

    </RelativeLayout>

</LinearLayout>